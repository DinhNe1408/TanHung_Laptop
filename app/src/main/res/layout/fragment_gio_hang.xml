<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.GioHangFragment">

    <LinearLayout
        android:background="#FAFEFF"
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:orientation="vertical">
        <ListView
            android:layout_marginTop="70dp"
            android:id="@+id/listview_danhsachsp_gohang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="700dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:gravity="center"

            android:layout_height="50dp"
            android:text="Tổng tiền:"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tongthanhtien"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="0000000 VND"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/thanhtoan_giohang"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh Toán"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/thongbaogiohang"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""></TextView>


</FrameLayout>